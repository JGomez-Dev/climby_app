<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/TVViaje2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/IVStart1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/IVStart2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/star"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/IVStart2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/IVStart3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/star"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/IVStart3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/IVAddStart"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/star"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/TVNameQualifyAttendees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/onboarding.page0.name"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/CVAttendees"
            app:layout_constraintStart_toEndOf="@+id/CVAttendees"
            app:layout_constraintTop_toTopOf="@+id/CVAttendees" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CVAttendees"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@mipmap/user"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/IVAddStart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/IVStart1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/IVStart1"
            app:srcCompat="@drawable/ic_baseline_add_24"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/IVRemoveStart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/IVStart1"
            app:layout_constraintEnd_toStartOf="@+id/IVStart1"
            app:layout_constraintTop_toTopOf="@+id/IVStart1"
            app:srcCompat="@drawable/ic_baseline_remove_24"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
